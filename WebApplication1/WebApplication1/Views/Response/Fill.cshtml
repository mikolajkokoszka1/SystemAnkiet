@model WebApplication1.Models.Survey

@{
    ViewData["Title"] = "Wypełnij ankietę";
}

<h1>@Model.Title</h1>

@if (!string.IsNullOrEmpty(Model.Description))
{
    <p class="lead">@Model.Description</p>
}

@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Fill" method="post">
    <input type="hidden" name="surveyId" value="@Model.Id" />
    
    @foreach (var question in Model.Questions.OrderBy(q => q.Order))
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    @question.Order. @question.QuestionText
                    @if (question.IsRequired)
                    {
                        <span class="text-danger">*</span>
                    }
                </h5>
                
                @if (question.QuestionType == "Text")
                {
                    <textarea name="answers[@question.Id]" class="form-control" rows="3" required="@question.IsRequired"></textarea>
                }
                else if (question.QuestionType == "SingleChoice")
                {
                    @foreach (var answer in question.Answers.OrderBy(a => a.Order))
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="answers[@question.Id]" value="@answer.Id" id="answer_@answer.Id" required="@question.IsRequired" />
                            <label class="form-check-label" for="answer_@answer.Id">
                                @answer.AnswerText
                            </label>
                        </div>
                    }
                }
                else if (question.QuestionType == "MultipleChoice")
                {
                    @foreach (var answer in question.Answers.OrderBy(a => a.Order))
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="multiAnswers_@question.Id"
                                   value="@answer.Id"
                                   id="multianswer_@answer.Id" />
                            <label class="form-check-label" for="multianswer_@answer.Id">
                                @answer.AnswerText
                            </label>
                        </div>
                    }
                }

            </div>
        </div>
    }
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Wyślij odpowiedzi</button>
        <a asp-controller="Survey" asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </div>
</form>
